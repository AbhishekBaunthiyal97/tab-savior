{
  "manifest_version": 3,
  "name": "TabSavior: Save Tabs & Logins",
  "short_name": "TabSavior",
  "description": "Save & restore tabs effortlessly with TabSavior! Keep logins & groups intactâ€”perfect for work, study, or multitasking. Boost productivity now!",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>",
    "*://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; img-src 'self' https://www.google.com https://*; style-src 'self' https://fonts.googleapis.com"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/original.png",
      "32": "images/original.png",
      "48": "images/original.png",
      "128": "images/original.png"
    }
  },
  "icons": {
    "16": "images/original.png",
    "32": "images/original.png",
    "48": "images/original.png",
    "128": "images/original.png",
    "192": "images/original.png",
    "256": "images/original.png",
    "512": "images/original.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "web_accessible_resources": [{
    "resources": ["js/Sortable.min.js", "images/*"],
    "matches": ["<all_urls>"]
  }]
} 